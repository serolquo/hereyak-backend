<%= form_for(@post) do |f| %>
  <%= render "shared/form_errors", :object => @post %>
  <div class="field">
    <%= f.label :content, "Message" %><br />
    <%= f.text_area :content, :size => "50x6", :class=>'text_field' %>
  </div>
  <div class="actions">
    <%= f.submit "Post your message", :class=>"button" %>
  </div>
<% end %>
